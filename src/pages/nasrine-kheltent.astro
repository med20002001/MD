---
import Layout from "../layouts/Layout.astro";
import { getEntry } from 'astro:content';
import { Image } from 'astro:assets';

const article = await getEntry('articles', 'nasrine-kheltent');

if (!article) {
  return Astro.redirect('/404');
}

const { title, date, image, imageAlt } = article.data;
const { Content } = await article.render();
---


<Layout title={title}>
  <section class="bg-[#f0f4f8] py-16">
    <div class="max-w-4xl mx-auto px-4 lg:px-8">
      <div class="bg-white rounded-lg shadow-sm p-10">
        <!-- Image principale centrÃ©e -->
        <div class="flex justify-center mb-8">
          <Image
            src={image}
            alt={imageAlt}
            width={256}
            class="w-64 h-auto object-cover"
            loading="lazy"
          />
        </div>


        <!-- Titre de l'article -->
        <h1 class="text-2xl font-bold text-gray-900 mb-2">
          {title}
        </h1>


        <!-- Date de publication -->
        <p class="text-gray-600 text-sm mb-6">
          {date}
        </p>


        <!-- Contenu de l'article -->
        <div class="text-gray-900 text-sm leading-relaxed space-y-4 prose prose-sm max-w-none prose-p:my-4 prose-strong:font-bold prose-strong:text-gray-900">
          <Content />
        </div>
      </div>
    </div>
  </section>
</Layout>
