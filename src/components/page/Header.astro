---
const currentPath = Astro.url.pathname;
import "../../styles/navbar.css";
---

<header class="bg-white shadow-sm sticky top-0 z-50">
  <nav class="container mx-auto px-4">
    <div class="flex items-center justify-between h-24">
      <!-- Logo -->
      <div class="flex-shrink-0">
        <a href="/" class="flex items-center">
          <img
            src="/images/logo.png"
            alt="MDN23 - Moroccan Diaspora Networking 23"
            class="h-16 w-auto"
          />
        </a>
      </div>

      <!-- Desktop Navigation with 3D Menu -->
      <div class="flex-1 hidden lg:flex justify-end">
       <ul class="menu hidden lg:flex">
          <!-- Organisation Dropdown -->
          <li>
            <a href="#" onclick="return false;">Organisation</a>
            <ul class="submenu">
              <li><a href="/missions">Mission</a></li>
              <li><a href="/equipe">Équipe</a></li>
              <li><a href="/partenariats">Partenariats</a></li>
            </ul>
          </li>

          <!-- Actualités Dropdown -->
          <li>
            <a href="#" onclick="return false;">Actualités</a>
            <ul class="submenu">
              <li><a href="/news">News</a></li>
              <li><a href="/publications">Publications</a></li>
              <li><a href="/projets">Projets</a></li>
              <li><a href="/media">Média</a></li>
            </ul>
          </li>

          <!-- Agenda -->
          <li>
            <a
              href="/agenda"
              class={currentPath === "/agenda" ||
              currentPath.startsWith("/agenda/")
                ? "active"
                : ""}
            >
              Agenda
            </a>
          </li>
          <li>
            <a
              href="/initiatives"
              class={currentPath === "/initiatives" ||
              currentPath.startsWith("/initiatives/")
                ? "active"
                : ""}
            >
              Initiatives
            </a>
          </li>
          <li>
            <a
              href="/services"
              class={currentPath === "/services" ||
              currentPath.startsWith("/services/")
                ? "active"
                : ""}
            >
              Services
            </a>
          </li>
          <li>
            <a
              href="/contact"
              class={currentPath === "/contact" ? "active" : ""}
            >
              Contact
            </a>
          </li>
        </ul>
      </div>

      <!-- Mobile Menu Button -->
      <button
        id="mobile-menu-btn"
        class="lg:hidden p-2 text-gray-700"
        aria-label="Toggle menu"
      >
        <svg
          class="w-6 h-6"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
    </div>

    <!-- Mobile Menu -->
    <div id="mobile-menu" class="hidden lg:hidden pb-4">
      <div class="space-y-1">
        <!-- Organisation Mobile -->
        <details class="group">
          <summary
            class="flex items-center justify-between px-4 py-3 cursor-pointer hover:bg-gray-50 rounded-lg transition-colors"
          >
            <span class="font-medium text-gray-700">Organisation</span>
            <svg
              class="w-4 h-4 text-gray-700 transition-transform duration-300 group-open:rotate-180"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M19 9l-7 7-7-7"></path>
            </svg>
          </summary>
          <div class="pl-8 mt-2 space-y-1">
            <a
              href="/missions"
              class="block px-4 py-2 text-gray-600 hover:text-[#C4302B] hover:bg-gray-50 rounded-lg transition-colors"
            >
              Mission
            </a>
            <a
              href="/equipe"
              class="block px-4 py-2 text-gray-600 hover:text-[#C4302B] hover:bg-gray-50 rounded-lg transition-colors"
            >
              Équipe
            </a>
            <a
              href="/partenariats"
              class="block px-4 py-2 text-gray-600 hover:text-[#C4302B] hover:bg-gray-50 rounded-lg transition-colors"
            >
              Partenariats
            </a>
          </div>
        </details>

        <!-- Actualités Mobile -->
        <details class="group">
          <summary
            class="flex items-center justify-between px-4 py-3 cursor-pointer hover:bg-gray-50 rounded-lg transition-colors"
          >
            <span class="font-medium text-gray-700">Actualités</span>
            <svg
              class="w-4 h-4 text-gray-700 transition-transform duration-300 group-open:rotate-180"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M19 9l-7 7-7-7"></path>
            </svg>
          </summary>
          <div class="pl-8 mt-2 space-y-1">
            <a
              href="/news"
              class="block px-4 py-2 text-gray-600 hover:text-[#C4302B] hover:bg-gray-50 rounded-lg transition-colors"
            >
              News
            </a>
            <a
              href="/publications"
              class="block px-4 py-2 text-gray-600 hover:text-[#C4302B] hover:bg-gray-50 rounded-lg transition-colors"
            >
              Publications
            </a>
            <a
              href="/projets"
              class="block px-4 py-2 text-gray-600 hover:text-[#C4302B] hover:bg-gray-50 rounded-lg transition-colors"
            >
              Projets
            </a>
            <a
              href="/media"
              class="block px-4 py-2 text-gray-600 hover:text-[#C4302B] hover:bg-gray-50 rounded-lg transition-colors"
            >
              Média
            </a>
          </div>
        </details>

        <!-- Other Menu Items Mobile -->
        <a
          href="/agenda"
          class={`block px-4 py-3 font-medium text-gray-700 hover:text-[#C4302B] hover:bg-gray-50 rounded-lg transition-colors ${currentPath.startsWith("/agenda") ? "active" : ""}`}
        >
          Agenda
        </a>
        <a
          href="/initiatives"
          class={`block px-4 py-3 font-medium text-gray-700 hover:text-[#C4302B] hover:bg-gray-50 rounded-lg transition-colors ${currentPath.startsWith("/initiatives") ? "active" : ""}`}
        >
          Initiatives
        </a>
        <a
          href="/services"
          class={`block px-4 py-3 font-medium text-gray-700 hover:text-[#C4302B] hover:bg-gray-50 rounded-lg transition-colors ${currentPath.startsWith("/services") ? "active" : ""}`}
        >
          Services
        </a>
        <a
          href="/contact"
          class={`block px-4 py-3 font-medium text-gray-700 hover:text-[#C4302B] hover:bg-gray-50 rounded-lg transition-colors ${currentPath === "/contact" ? "active" : ""}`}
        >
          Contact
        </a>
      </div>
    </div>
  </nav>
</header>

<script>
  const mobileMenuBtn = document.getElementById("mobile-menu-btn");
  const mobileMenu = document.getElementById("mobile-menu");

  mobileMenuBtn?.addEventListener("click", () => {
    const isHidden = mobileMenu?.classList.toggle("hidden");
    mobileMenuBtn?.setAttribute("aria-expanded", isHidden ? "false" : "true");
  });

  // Close mobile menu when clicking outside
  document.addEventListener("click", (e) => {
    const target = e.target as HTMLElement;
    if (!mobileMenuBtn?.contains(target) && !mobileMenu?.contains(target)) {
      mobileMenu?.classList.add("hidden");
      mobileMenuBtn?.setAttribute("aria-expanded", "false");
    }
  });

  // Close mobile menu on navigation
  document.addEventListener("astro:page-load", () => {
    mobileMenu?.classList.add("hidden");
    mobileMenuBtn?.setAttribute("aria-expanded", "false");
  });
</script>
